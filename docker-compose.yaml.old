version: '3.7'

services:
  web:
    build: .
    restart: always
    env_file:
     - ./.env.web
     - ./.env.db
    ports:
      - 8000:8000
    depends_on:
      - db
  db:
    image: postgres:13
    env_file:
     - ./.env.db
    environment:
      - LANG:'ru_RU.UTF-8'
      - LANGUAGE:'ru_RU.UTF-8'
      - LC_ALL:'ru_RU.UTF-8'
    volumes:
      - ./postgres/init.sh:/docker-entrypoint-initdb.d/init.sh
    
